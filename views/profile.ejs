  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
  <title>Social-link-profile</title>
  <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>
  
  

  
  <div class="containered">


    <nav>
      <div class="logo">
        <h5>Pinterest</h5>
          
      </div>
      <ul class="navLink">
        <li><a href="/about">About</a></li>
        <li><a href="/feed">Feed</a></li>
        <li><a href="/">Logout</a></li>
      </ul>
      <div class="lines">
          <div class="l1"></div>
          <div class="l2"></div>
          <div class="l3"></div>
      </div>
    </nav>



    <div class="carded">
      <div class="card__text">
        <div class="card__img">
          <img src="https://images.unsplash.com/photo-1627226515013-2e5995e3547e?q=80&w=1528&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
        </div>
        <div class="card__detail">
          <h1 class="card__header"><%=user.fullname %></h1>
          <h2 class="card__name">@<%=user.username %></h2>
          <h2 class="card__name">Lorem ipsum dolor sit amet consectetur adipisicing elit.</h2>
          <h3 class="card__job">"Software Engineer"</h3>
        </div>
      </div>
      <div class="card__btn">
        <!-- <a href="/">Logout</a> -->

        <form action="/upload" method="post" enctype="multipart/form-data" >
          <input type="file" name="file">
          <input type="text" name="imagecaption" placeholder="write caption">
          <input type="submit" name="submit" id="a">
        </form>

      </div>
    </div>
  </div>
</body>
</html>

    
<div class="container">
<div class="cards flex">
  <% user.posts.forEach(function(postdata){ %>
    <div class="card" style="width: 18rem;">
      <img src="/images/uploads/<%= postdata.image %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= postdata.imageText %></h5>
      </div>
    </div>
 <%  })%>
</div>
